    "autoload": {
        "psr-4": {
            "Faf\\TemplateEngine\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Faf\\TemplateEngine\\Tests\\": "tests"
        }
    },
    "repositories": [
        {
            "type": "composer",
